<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleEquipo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderitem"
            android:layout_margin="10dp"
            >

            <ImageView
                android:id="@+id/tv_imagedetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.5"

                android:scaleType="centerCrop" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Equipo"
                android:textColor="@color/purple_200"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_nombreEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Equipo"
                android:textColor="@color/teal_200"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ranking FIFA"
                android:textColor="@color/purple_200"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_rankingEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Equipo"
                android:textColor="@color/teal_200"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Region"
                android:textColor="@color/purple_200"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_regionEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Equipo"
                android:textColor="@color/teal_200"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ClasificaciÃ³n"
                android:textColor="@color/purple_200"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_clasificacionEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Equipo"
                android:textColor="@color/teal_200"
                android:textSize="15dp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>